@{
    ViewData["Title"] = "Sacar";
}

<div class="bg-white p-8 rounded-xl shadow-sm max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-6 text-blue-700">Sacar</h1>

    @if (ViewBag.Erro != null)
    {
        <p class="bg-red-100 text-red-700 p-2 mb-4 rounded-md">
            @ViewBag.Erro
        </p>
    }

    <form method="post" class="space-y-4">
        <label class="block">
            Valor:
            <input type="number" step="0.01" name="valor"
                   class="w-full border rounded-md p-2 mt-1" required />
        </label>

        <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded-md">
            Sacar
        </button>
    </form>
</div>
