<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Csharp .NET Bank</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50 text-gray-800">

    <!-- Navbar -->
    <nav class="bg-white shadow-md">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-between items-center">

            <span class="text-xl font-semibold text-blue-700">
                Csharp .NET Bank
            </span>

            <div class="space-x-6 text-lg">
                <a class="hover:text-blue-600 transition" href="/Conta/Saldo">Ver Saldo</a>
                <a class="hover:text-blue-600 transition" href="/Conta/Depositar">Depositar</a>
                <a class="hover:text-blue-600 transition" href="/Conta/Sacar">Sacar</a>
            </div>

        </div>
    </nav>

    <main class="max-w-5xl mx-auto mt-10 px-4">
        @RenderBody()
    </main>

</body>
</html>
